<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/recipe_book_background"
    tools:context=".SignIn_UpActivity">

    <androidx.appcompat.widget.Toolbar
        app:title="Welcome to FridgeChef 🧑‍🍳"
        app:titleTextColor="@color/dark_brown"
        android:background="@color/cream"
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/page_background">

            <TextView
                android:id="@+id/textviewTitle_sign_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Create your FridgeChef account"
                android:textSize="20sp"
                android:textColor="@color/dark_brown"
                android:fontFamily="@font/cormorantgaramond" />

            <EditText
                android:id="@+id/input_full_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Full Name"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/input_background"
                android:fontFamily="@font/cormorantgaramond"
                android:textColor="@color/dark_brown"
                android:textColorHint="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Email"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/input_background"
                android:fontFamily="@font/cormorantgaramond"
                android:textColor="@color/dark_brown"
                android:textSize="16sp"
                android:textColorHint="@color/black"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Password"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/input_background"
                android:fontFamily="@font/cormorantgaramond"
                android:textColor="@color/dark_brown"
                android:textSize="16sp"
                android:textColorHint="@color/black"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/button_submit_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:padding="12dp"
                android:text="Sign Up"
                android:textSize="18sp"
                android:textColor="@color/cream"
                android:fontFamily="@font/cormorantgaramond"
                android:background="@drawable/rounded_button"
                app:backgroundTint="@null"
                android:elevation="2dp" />

            <TextView
                android:id="@+id/textView_signIn"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:text="Already have an account? Sign In"
                android:textColor="@color/dark_brown"
                android:fontFamily="@font/cormorantgaramond"
                android:textSize="16sp" />

        </LinearLayout>
</LinearLayout>
